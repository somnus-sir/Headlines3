<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/ll_dengluMethod_ic"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="80dp">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/shoujidengl"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="80dp">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/qqdengl"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="80dp">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/weibodengl"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:layout_below="@id/ll_dengluMethod_ic"
            android:text="更多登录方式"/>
    </RelativeLayout>
    <LinearLayout
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ListView
            android:layout_marginTop="20dp"

            android:id="@+id/lv_fl"
            android:dividerHeight="40dp"
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ddd"
        android:layout_height="100dp">
        <Button
            android:drawableTop="@mipmap/down"
            android:id="@+id/bt_fl_down"
            android:text="离线下载"
            android:layout_marginTop="30dp"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:textColor="#999"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginBottom="8dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:drawableTop="@mipmap/shezhi"
            android:text="设置"
            android:layout_marginTop="30dp"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:textColor="#999"
            android:layout_width="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>